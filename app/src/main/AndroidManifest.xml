<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.insper.al.gabrielmf1.comedyapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.edu.insper.al.gabrielmf1.comedyapp.Activities.RegisterActivity" />
        <activity android:name="br.edu.insper.al.gabrielmf1.comedyapp.Activities.HomeActivity" />
        <activity android:name="br.edu.insper.al.gabrielmf1.comedyapp.Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.edu.insper.al.gabrielmf1.comedyapp.Activities.Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="br.edu.insper.al.gabrielmf1.comedyapp.Activities.PostDetailActivity"></activity>
    </application>

</manifest>